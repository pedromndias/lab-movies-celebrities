<div class="d-flex flex-column align-items-center">
<div class="card d-flex flex-column align-items-center">
<h2>Edit "{{this.singleMovie.title}}" Movie</h2>
<div class="card-body">
<form action="/movies/{{this.singleMovie._id}}/edit" method="post">
    <label for="title">Title: </label>
    <input type="text" name="title" value="{{this.singleMovie.title}}" class="form-control">
    <br>
    <label for="genre">Genre: </label>
    <input type="text" name="genre" value="{{this.singleMovie.genre}}" class="form-control">
    <br>
    <label for="plot">Plot: </label>
    <input type="text" name="plot" value="{{this.singleMovie.plot}}" class="form-control">
    <br>
    <label for="cast">Cast: </label>
    <select name="cast" multiple="true" class="form-select">
        {{!-- Iterate through all the celebrities and show option by its id (and render the name): --}}
        {{#each this.castArray}}
            <option value="{{this._id}}" selected>{{this.name}}</option>
        {{/each}}
    </select>
    <br>
    <button class="btn btn-info">Update Movie</button>
</form>
</div>
</div>
</div>